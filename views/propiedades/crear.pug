extends ../layout/index.pug

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido  
    div(class= "py-10")
        h1(class = "font-extrabold text-4xl my-10 text-center") Bienes
            span(class= "font-normal") Raices
        h2(class="text-center text-3xl font-extrabold ")= pagina 

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="space-y-8")
                div.space-y-8
                    h3(class="text-lg leading-6 font-medium text-gray-900") Informacion General.
                    p(class=" text-gray-600") Agrega Informacion sobre la propiedad en venta.

                div(class="mt-2")
                    label(for="titulo" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Titulo del anuncion 
                    input(type="text" name="titulo" id="titulo" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="titulo propiedad, ej. Casa de la playa")
                    
                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")    

                    div(class="md:w-1/2")
                        label(for="categoria" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Categoria 
                        select(name="categoria" id="categoria" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                            option(value="") - seleccione - 
                    
                    div(class="md:w-1/2")
                        label(for="precio" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Precio 
                        select(name="precio" id="precio" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                            option(value="") - seleccione - 
                

                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")    

                    div(class="md:w-1/3")
                        label(for="habitaciones" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Habitaciones 
                        select(name="habitaciones" id="habitaciones" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                            option(value="") - seleccione - 
                            -   for(let n = 1; n < 6; n++)
                                    option(value=n) #{n} 
                    
                    div(class="md:w-1/3")
                        label(for="estacionamiento" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Estacionamiento 
                        select(name="estacionamiento" id="estacionamiento" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                            option(value="") - seleccione -
                            -   for(let n = 1; n < 4; n++)
                                    option(value=n) #{n} 
                    div(class="md:w-1/3")
                        label(for="wc" class="block text-sm uppercase text-gray-500 mb-2 font-bold") WC 
                        select(name="wc" id="wc" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                            option(value="") - seleccione -
                            -   for(let n = 1; n < 5; n++)
                                    option(value=n) #{n} 
                #mapa.h-96
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js") 