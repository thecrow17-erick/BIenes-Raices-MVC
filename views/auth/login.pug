extends ../layout/index.pug

block contenido  
    div(class= "py-10")
        h1(class = "font-extrabold text-4xl my-10 text-center") Bienes
            span(class= "font-normal") Raices
        h2(class="text-center text-3xl font-extrabold ")= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                        p(class=" bg-red-500 text-white text-center uppercase text-xs p-2 mb-1 font-bold")= error.msg
                        
        div(class= "mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-8 shadow")
                form(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div(class="mt-2")
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email de registro 
                        input(type="email" name="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Email")
                    
                    div(class="mt-2")
                        label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Password
                        input(type="password" name="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password")

                    div(class="flex items-center justify-between mt-5")
                        a(href="/auth/registro" class="text-gray-500 text-xs") No tienes cuenta? Crea una. 
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi password. 

                    input(type="submit" value="Iniciar Sesion" class="mt-5 w-full bg-indigo-500 hover:bg-indigo-700 text-white py-3 cursor-pointer rounded-lg")

        