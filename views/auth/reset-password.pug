extends ../layout/index.pug

block contenido  
    div(class= "py-10")
        h1(class = "font-extrabold text-4xl my-10 text-center") Bienes
            span(class= "font-normal") Raices
        h2(class="text-center text-3xl font-extrabold ")= pagina 

        div(class= "mt-8 mx-auto max-w-md")
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores
                        p(class=" bg-red-500 text-white text-center uppercase text-xs p-2 mb-1 font-bold")= error.msg
            div(class="bg-white py-8 px-8 shadow")

                form(method= "POST" noValidarte)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div(class="mt-2")
                        label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Nuevo password 
                        input(type="password" name="password" id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu nuevo password")
                    

                    input(type="submit" value="Guardar password" class="mt-5 w-full bg-indigo-500 hover:bg-indigo-700 text-white py-3 cursor-pointer rounded-lg")